<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_facility_details_menu" model="ir.actions.act_window">
        <field name="name">facility.details.menu</field>
        <field name="res_model">facility.details</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <record id="view_facility_details_form" model="ir.ui.view">
        <field name="name">facility.details.form</field>
        <field name="model">facility.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h2>Facility Details</h2>
                    <group name="group_top">
                        <group name="group_left">
                            <field name="facility_name"/>
                        </group>
                        <group name="group_right">
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_facility_details_tree" model="ir.ui.view">
        <field name="name">facility.details.tree</field>
        <field name="model">facility.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="facility_name" decoration-bf="1"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

</odoo>
