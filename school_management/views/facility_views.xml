<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_facility_details_menu" model="ir.actions.act_window">
        <field name="name">Facility Details</field>
        <field name="res_model">facility.details</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <record id="view_facility_details_form" model="ir.ui.view">
        <field name="name">facility.details.form</field>
        <field name="model">facility.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box">
                        <button class=" oe_stat_button" name="class_button" type="object" icon="fa-building-o" attrs="{'invisible':[('class_count','==',0)]}" help="Class withb same facility">
                        <span>
                            <field name="class_count" class="o_stat_value"/>
                            <span class="o_stat_text">Class with same facility</span>
                        </span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h2>Facility Details</h2>
                    </div>
                    <group name="group_top">
                        <group name="group_left">
                            <field name="facility_name" attrs="{'required':1}"/>
                            <field name="classes" widget="many2many_tags"/>
                        </group>
                        <group name="group_right">
                            <field name="color" widget="color_picker" attrs="{'required':1}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_facility_details_tree" model="ir.ui.view">
        <field name="name">facility.details.tree</field>
        <field name="model">facility.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="facility_name" decoration-bf="1"/>
                <field name="classes" widget="many2many_tags"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <record id="view_facility_details_search" model="ir.ui.view">
        <field name="name">facility.details.search</field>
        <field name="model">facility.details</field>
        <field name="arch" type="xml">
            <search>
                <field name="facility_name"/>
                <field name="color" />
                <field name="classes"/>

                 <group expand="0" string="Group By">
                    <filter string="Class Name" name="classes" context="{'group_by': 'classes'}"/>
                </group>

            </search>
        </field>
    </record>

</odoo>
