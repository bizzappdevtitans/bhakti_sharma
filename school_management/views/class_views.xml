<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action-->
    <record id="school_management_action_class_details_menu" model="ir.actions.act_window">
        <field name="name">Class Details</field>
        <field name="res_model">class.details</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <!-- Form view -->
    <record id="school_management_class_details_form_view" model="ir.ui.view">
            <field name="name">class.details.form</field>
            <field name="model">class.details</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box">
                            <button class=" oe_stat_button" name="attendance_button" type="object" icon="fa-list-alt" attrs="{'invisible':[('attendance_count','==',0)]}">
                            <span>
                                <field name="attendance_count" class="o_stat_value"/>
                                <span class="o_stat_text">Attendance</span>
                            </span>
                            </button>

                            <button class=" oe_stat_button" name="student_button" type="object" icon="fa-users" attrs="{'invisible':[('student_count','==',0)]}">
                            <span>
                                <field name="student_count" class="o_stat_value"/>
                                <span class="o_stat_text">Total students</span>
                            </span>
                            </button>

                            <button class=" oe_stat_button" name="subject_button" type="object" icon="fa-book" attrs="{'invisible':[('subject_count','==',0)]}">
                            <span>
                                <field name="subject_count" class="o_stat_value"/>
                                <span class="o_stat_text">Total subjects</span>
                            </span>
                            </button>

                            <button class=" oe_stat_button" name="exam_button" type="object" icon="fa-th-list" attrs="{'invisible':[('exam_count','==',0)]}">
                            <span>
                                <field name="exam_count" class="o_stat_value"/>
                                <span class="o_stat_text">Exams</span>
                            </span>
                            </button>

                        </div>
                        <div class="oe_title">
                            <h2>Class Details</h2>
                        </div>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="class_name"/>
                                <field name="teacher_id"/>
                                <field name="facility_ids" widget="many2many_tags"/>
                            </group>
                            <group name="group_right">
                                <field name="capacity"/>
                                <field name="room_number"/>
                            </group>
                        </group>
                        <notebook>
                                <page string="Add Student Data">
                                    <field name="student_ids">
                                        <tree>
                                            <field name="student_name"/>
                                            <field name="rollNumber"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Add Subject Data">
                                    <field name="subject_ids">
                                        <tree>
                                            <field name="subject_name"/>
                                        </tree>
                                    </field>
                                </page>
                                 <page string="Add Attendance Data">
                                    <field name="attendance_ids">
                                        <tree>
                                            <field name="sheet_name"/>
                                            <field name="attendance_date"/>
                                            <field name="status"/>
                                            <field name="reason"/>
                                            <field name="student_ids"/>
                                            <field name="startTime"/>
                                            <field name="endTime"/>
                                            <field name="notes"/>
                                        </tree>
                                    </field>
                                </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
    </record>

    <!-- Tree View -->
     <record id="school_management_class_details_tree_view" model="ir.ui.view">
        <field name="name">class.details.tree</field>
        <field name="model">class.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence_number"/>
                <field name="class_name"/>
                <field name="teacher_id"/>
                <field name="facility_ids"  widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="capacity"/>
                <field name="room_number"/>
            </tree>
        </field>
    </record>

    <!-- Search view -->
    <record id="school_management_class_details_search_view" model="ir.ui.view">
        <field name="name">class.details.search</field>
        <field name="model">class.details</field>
        <field name="arch" type="xml">
            <search>
                <field name="class_name"/>
                <field name="teacher_id"/>
                <field name="facility_ids"/>
                <field name="capacity"/>
                <field name="student_ids"/>
                <field name="room_number"/>

                <filter string="Library facilities" name="facility_ids" domain="[('facility_ids', '=', 'library')]"/>

                <group expand="0" string="Group By">
                    <filter string="Class Name" name="class_name" context="{'group_by': 'class_name'}"/>
                </group>

                <group expand="0" string="Group By">
                    <filter string="Facility name" name="facility_ids" context="{'group_by': 'facility_ids'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
