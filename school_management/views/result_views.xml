<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_result_details_menu" model="ir.actions.act_window">
        <field name="name">Result Details</field>
        <field name="res_model">result.details</field>
        <field name="view_mode">tree,form,search</field>
    </record>

     <!-- Tree view -->
    <record id="view_result_details_tree" model="ir.ui.view">
        <field name="name">result.details.tree</field>
        <field name="model">result.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence_number"/>
                <field name="result_name"/>
                <field name="class_name"/>
                <field name="total_marks"/>
                <field name="obtained_marks" decoration-bf='1'/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_result_details_form" model="ir.ui.view">
        <field name="name">result.details.form</field>
        <field name="model">result.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h2>Result Details</h2>
                    </div>
                    <group name="group_top">
                        <group name="group_left">
                            <field name="result_name"  attrs="{'required':1}"/>
                            <field name="class_name"/>
                             <field name="student_name"/>
                        </group>
                        <group name="group_right">
                            <field name="total_marks"/>
                            <field name="obtained_marks"/>
                            <field name="percentage"/>
                            <field name="grade"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

   <!--Search view -->
 <record id="view_result_details_search" model="ir.ui.view">
        <field name="name">result.details.search</field>
        <field name="model">result.details</field>
        <field name="arch" type="xml">
            <search>
                <field name="result_name"/>
                <field name="class_name"/>
                <field name="student_name"/>
                <field name="total_marks"/>
                <field name="obtained_marks"/>
                <field name="percentage"/>
                <field name="grade"/>

                <group expand="0" string="Group By">
                    <filter string="Class Name" name="class_name" context="{'group_by': 'class_name'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
